<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:id="@+id/table_btn"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:stretchColumns="0">

        <TableRow>

            <TextView
                android:id="@+id/txt_cat_address"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:textSize="15dp"
                android:background="@drawable/btn_category"
                android:textColor="@color/colorPrimaryDark"
                android:text="서울특별시 서초구 강남대로 강남역" />

            <Button
                android:id="@+id/btn_cat_address"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_category2"
                android:text="변경"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/txt_cat_boundary"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/btn_category"
                android:gravity="center"
                android:text="500m" />

            <Button
                android:id="@+id/btn_cat_boundary"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_category2"
                android:text="변경" />
        </TableRow>

    </TableLayout>


    <ExpandableListView
        android:layout_above="@+id/table_btn"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/list_category">
    </ExpandableListView>


</RelativeLayout>